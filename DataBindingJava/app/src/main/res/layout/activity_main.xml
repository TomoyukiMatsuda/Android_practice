<?xml version="1.0" encoding="utf-8"?>
<!-- ルートをlayoutにすることでDataBindingに対応したレイアウトとして認識される -->
<!-- activity_main.xml => ActivityMainBinding このような形で自動的にxmlファイル名に応じたBindingクラスが作られる-->
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    Binding オブジェクト -->
    <data>
        <!-- この記述でUserクラスをバインディングするようになる？ -->
        <variable name="user" type="com.android.databindingjava.User" />
    </data>

    <!-- Views-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.name}" /> <!-- ここの部分でバインディングする的な -->

    </LinearLayout>
</layout>
